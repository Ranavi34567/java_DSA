class Main {
    public static void main(String[] args) {
        //System.out.println("Try programiz.pro");
        int[] arr={5,9,1,8,7};
        int n=arr.length;
        int temp=0;
        for(int i=0;i<=n-3;i++){
            int sum=0;
            for(int j=i;j<i+3;j++){
                sum=sum+arr[j];
            }
            temp=Math.max(temp,sum);
        }
        System.out.println(temp);
    }
}
