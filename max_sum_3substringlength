class Main {
    public static void main(String[] args) {
        //System.out.println("Try programiz.pro");
        String s="ammu";
        int n=s.length();
        int sl=3;
        int temp=0;
        
        for(int i=0;i<=n-sl;i++){
            int j=i+sl-1;
            int sum=0;
            for(int k=i;k<=j;k++){
                sum=sum+s.charAt(k);
            }
            temp=Math.max(temp,sum);
        }
        System.out.println(temp);
        
    }
}
